{
  "name": "aura-ui",
  "private": true,
  "scripts": {
    "postinstall": "husky install",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "clean": "turbo run clean && rm -rf node_modules",
    "prettier": "prettier --write '**/*.{json,md,js,ts,jsx,tsx,yml,css}'",
    "prestorybook": "pnpm clean && pnpm install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "generate:package": "npx hygen package new",
    "version": "pnpm changeset version && pnpm install --lockfile-only",
    "release": "pnpm changeset publish",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@changesets/cli": "2.23.0",
    "@storybook/addon-a11y": "6.5.13",
    "@storybook/addon-actions": "6.5.13",
    "@storybook/addon-docs": "6.5.16",
    "@storybook/addon-essentials": "6.5.13",
    "@storybook/addon-links": "6.5.13",
    "@storybook/addons": "6.5.16",
    "@storybook/react": "6.5.13",
    "@storybook/theming": "6.5.16",
    "husky": "8.0.1",
    "lint-staged": "12.4.1",
    "prettier": "2.6.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "4.7.1",
    "storybook-dark-mode": "2.1.1",
    "turbo": "1.4.7",
    "typescript": "4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "turbo run lint && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{ts,js,json,md}": "prettier --write"
  }
}
